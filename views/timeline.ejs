<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>@<%= user.username %> | Chirpper</title> 
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/timeline.css">
  <script src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</head>

<body>
  
  <div class="topbar-container">
    <div class="topbar alignedToMainGrid">
        <ul class="header-items">
          <li><a href="#"><i class="fas fa-home"></i>Home</a></li>
          <li><i class="fas fa-hand-lizard fa-2x" data-fa-transform="flip-h"></i></li>
          <li><button type="button" class="chirpButton">Chirp</button></li>
          <li>
          <% if (currentUser) { %>
           <a href="/logout">Logout</a>
          <% } %>
          </li>
        </ul>
    </div>
  </div>

  <div class="main-page-container">
    
    <div class="heroColor-container">
      <div class="heroColor alignedToMainGrid">
          <div class="profileAvatar"></div>
      </div>
    </div>

    <div class="user-profile-bar-container">
      <div class="user-profile-bar alignedToMainGrid">
        <div class="userProfileBar-left"></div>
        <div class="userProfileBar-middle"></div>
        <div class="userProfileBar-right"></div>
      </div>
    </div>
   
    <div class="main-grid alignedToMainGrid">
      <div class="profile-sidebar"><a href="/timeline/<%= user.username %>">@<%= user.username %></a></div>
      <div class="timeline">
        <form action="/timeline/<%= user.username %>/createChirp" method="POST" class="chirp-form">
          <textarea name="newChirpBody" placeholder="What's happening?" maxlength="140" class="chirp-form__input"></textarea>
          <button class="btn btn-primary chirp-form__button">Chirp</button>
        </form>
        <ul>
          <% for (let i = 0; i < user.chirps.length; i++) { %>
            <li class="chirp">
              <div class="chirp-user-pic"></div>
              <div class="chirp-content">
                <div class="chirp-content__details">
                  <a href="/timeline/<%= user.username %>">@<%= user.username %>
                  </a> 
                  &middot; 
                  <%= user.chirps[i].createdDate.toLocaleDateString('en-US', {month: 'short', day: 'numeric'}) %>
                </div>
                <div class="chirp-content__body"><%= user.chirps[i].body %></div>
                <div class="chirp-content__likes"><i class="far fa-heart"></i> <%= user.chirps[i].numLikes %></div>
              </div>
            </li>
            <% } %>
        </ul>
      </div>
      <div class="sidebar-right"></div>
    </div> <!--End: main-grid-->

  </div> <!--End: main-page-container -->

</body>
</html>