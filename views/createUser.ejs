<html>  
  <head>
    <title>Chirpper</title>

    <!--bootstrap css-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!--local css-->
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/createUser.css">
    <!--fontawesome-->
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
  </head>

  <body>

    <div class="wrapper">
      <div class="container">
        <i class="fas fa-hand-lizard fa-2x" data-fa-transform="flip-h"></i> 
        <h2>Create your account</h2>
          <form action="/createUser" method="POST"> 
              <!-- all of the value from createUser input is added to "user" object --> 
              <input type="email" name="user[email]" placeholder="E-mail" required>
              <input type="text" name="user[username]" placeholder="Username" minlength="3" maxlength="12" required>
              <input type="password" name="user[password]" placeholder="Password" minlength="5" required>
              <input type="submit" class="btn btn-primary btn-sm">
          </form>
      </div> <!--End container-->
    </div> <!--End wrapper-->
   
    <script src="js/createUser.js"></script>
  </body>

</html>

